{
  "name": "code-gate",
  "version": "1.1.0",
  "description": "Intelligent Git commit guard and code reviewer. Supports local (Ollama) and cloud models (DeepSeek, OpenAI, Anthropic, etc.) with a rich CLI UI.",
  "type": "module",
  "bin": {
    "code-gate": "bin/code-gate.js",
    "code-gate-hook": "scripts/hook.sh"
  },
  "main": "dist/index.js",
  "files": [
    "dist",
    "bin",
    "scripts",
    "vendor",
    "README.md",
    "README_ZH.md",
    "LICENSE"
  ],
  "keywords": [
    "git",
    "commit",
    "code review",
    "DeepSeek",
    "Ollama",
    "diff2html"
  ],
  "author": "gil2015 <jiguojun31@foxmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Gil2015/code-gate.git"
  },
  "homepage": "https://github.com/Gil2015/code-gate#readme",
  "bugs": {
    "url": "https://github.com/Gil2015/code-gate/issues"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "clean": "rimraf dist",
    "dev": "node --enable-source-maps dist/cli.js",
    "hook": "node --enable-source-maps dist/commands/hook.js",
    "prepare": "npm run build"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "commander": "^12.1.0",
    "diff2html": "^3.4.47",
    "dompurify": "^3.3.1",
    "dotenv": "^17.2.3",
    "highlight.js": "^11.9.0",
    "jsdom": "^27.0.1",
    "marked": "^17.0.1",
    "micromatch": "^4.0.8",
    "openai": "^4.60.0",
    "picocolors": "^1.1.1",
    "yaml": "^2.6.0"
  },
  "devDependencies": {
    "@types/dompurify": "^3.0.5",
    "@types/jsdom": "^27.0.0",
    "@types/marked": "^5.0.2",
    "@types/micromatch": "^4.0.10",
    "@types/node": "^22.7.5",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.3"
  }
}
